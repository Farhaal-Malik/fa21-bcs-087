<link rel="stylesheet" href="/css/admin.css">
<h2><%= product._id ? "Edit" : "Add" %> Product</h2>

<form action="<%= product._id ? '/admin/products/' + product._id + '/edit'
                               : '/admin/products/add' %>"
      method="POST" enctype="multipart/form-data" class="admin-form">

  <label>Name</label>
  <input name="name" value="<%= product.name || '' %>" required>

  <label>Price</label>
  <input name="price" type="number" step="0.01" value="<%= product.price || '' %>" required>

  <label>Description</label>
  <textarea name="description" rows="4" required><%= product.description || '' %></textarea>

  <label>Image URL (optional)</label>
  <input name="imageUrl" value="<%= product.image || '' %>">

  <label>Or upload image</label>
  <input type="file" name="image" accept="image/*">

  <button type="submit" class="btn">Save</button>
</form>
