<link rel="stylesheet" href="/css/adminOrders.css">
<h2>Orders</h2>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Items</th>
      <th>Address</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.userEmail %></td>
        <td>
          <ul>
            <% order.items.forEach(i => { %>
              <li><%= i.product.name %> (x<%= i.quantity %>)</li>
            <% }) %>
          </ul>
        </td>
        <td>
          <%= order.deliveryAddress.name %>, <%= order.deliveryAddress.addressLine %>, 
          <%= order.deliveryAddress.city %>, <%= order.deliveryAddress.country %>
        </td>
        <td><%= order.createdAt.toDateString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
