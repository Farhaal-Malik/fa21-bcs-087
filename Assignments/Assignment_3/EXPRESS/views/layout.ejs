<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mulberry Style Header</title>

  <!-- Fonts & Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
</head>
<body>

<% if (user && user.isAdmin) { %>
  <!-- ================= ADMIN HEADER ================= -->
   
  <header class="admin1-header">
    <nav class="admin-nav-left">
      <a href="/admin/dashboard" title="Orders"><i class="bi bi-box-seam"></i></a>
      <a href="/admin/products" title="Products"><i class="bi bi-tools"></i></a>
      <a href="/admin/users" title="Users"><i class="bi bi-people-fill"></i></a>
    </nav>

    <div class="admin-logo">ADMIN PANEL</div>

    <nav class="admin-nav-right">
      <a href="/logout" title="Logout"><i class="bi bi-box-arrow-right"></i></a>
    </nav>
    
  </header>
<% } else { %>
  <!-- ================= CUSTOMER HEADER ================= -->
  <header class="top-header">
    <nav class="nav-left">
      <div class="dropdown">
        <a href="/products">What's New</a>
        <div class="dropdown-menu">
          <a href="#">What's New</a>
          <a href="#">Bayswater</a>
          <a href="#">Islington Bucket</a>
          <a href="#">Clovelly</a>
        </div>
      </div>

      <div class="dropdown">
        <a href="#">Bags</a>
        <div class="dropdown-menu">
          <a href="#">All Bags</a>
          <a href="#">Crossbody Bags</a>
          <a href="#">Shoulder Bags</a>
          <a href="#">Tote Bags</a>
          <a href="#">Bucket Bags</a>
          <a href="#">Mini & Micro Bags</a>
          <a href="#">Top Handle Bags</a>
          <a href="#">Clutches & Evening Bags</a>
          <a href="#">Backpacks</a>
          <a href="#">Men's Bags</a>
        </div>
      </div>

      <div class="dropdown">
        <a href="#">Women</a>
        <div class="dropdown-menu">
          <a href="#">What's New</a>
          <a href="#">Bags</a>
          <a href="#">Small Leather Goods</a>
          <a href="#">Accessories</a>
          <a href="#">Gifts</a>
          <a href="#">Icons</a>
          <a href="#">Travel</a>
          <a href="#">Ready-to-wear</a>
        </div>
      </div>

      <div class="dropdown">
        <a href="#">Men</a>
        <div class="dropdown-menu">
          <a href="#">Bags</a>
          <a href="#">Small Leather Goods</a>
          <a href="#">Accessories</a>
          <a href="#">Gifts</a>
          <a href="#">Travel</a>
        </div>
      </div>

      <div class="dropdown">
        <a href="#">Gifts</a>
        <div class="dropdown-menu">
          <a href="#">Gifts</a>
          <a href="#">Gifts For Her</a>
          <a href="#">Gifts For Him</a>
        </div>
      </div>
    </nav>

    <div class="logo">
      <h1>Mulberry</h1>
    </div>

    <nav class="nav-right">
      <div class="dropdown">
        <a href="#"><i class="fa-solid fa-magnifying-glass"></i> Search</a>
        <div class="dropdown-menu">
          <input type="text" placeholder="Search..." style="width: 100%; padding: 10px;">
        </div>
      </div>

      <div class="dropdown">
        <a href="#">My Mulberry</a>
        <div class="dropdown-menu">
          <% if (user) { %>
            <a href="/profile">Profile</a>
            <a href="/my-orders">My Orders</a>
            <a href="/logout">Logout</a>
          <% } else { %>
            <a href="/login">Sign In</a>
            <a href="/signup">Create Account</a>
          <% } %>
        </div>
      </div>

      <div class="dropdown">
        <a href="/cart">Shopping Bag</a>
      </div>
    </nav>
  </header>
<% } %>

<!-- ================= PAGE BODY ================= -->
<main>
  <%- body %>
</main>

<!-- ================= FOOTER ================= -->
<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h4>Customer Care</h4>
      <ul>
        <li><a href="#">Contact Us</a></li>
        <li><a href="#">Returns</a></li>
        <li><a href="#">Ordering and Shipping</a></li>
        <li><a href="#">FAQs</a></li>
      </ul>
    </div>
    <div class="footer-section">
      <h4>Services</h4>
      <ul>
        <li><a href="#">Repairs</a></li>
        <li><a href="#">In-Store Care</a></li>
        <li><a href="#">View All Services</a></li>
      </ul>
    </div>
    <div class="footer-section">
      <h4>About</h4>
      <ul>
        <li><a href="#">Investors</a></li>
        <li><a href="#">Careers</a></li>
        <li><a href="#">Design Icons</a></li>
        <li><a href="#">Journal</a></li>
      </ul>
    </div>
    <div class="footer-section">
      <h4>Sustainability</h4>
      <ul>
        <li><a href="#">B Corp</a></li>
      </ul>
      <h4>Select Your Region</h4>
      <ul>
        <li><a href="#">Pakistan</a></li>
        <li><a href="#">Store Locator</a></li>
      </ul>
    </div>
  </div>

  <div class="footer-social">
    <div>
      <h4>Follow Mulberry</h4>
      <div class="social-icons">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-youtube"></i></a>
        <a href="#"><i class="fab fa-pinterest"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
      </div>
    </div>

    <div class="footer-subscribe">
      <h4>Sign Up For Updates</h4>
      <form>
        <input type="email" placeholder="Enter your email">
        <button type="submit">GO</button>
      </form>
    </div>
  </div>

  <div class="footer-bottom">
    <a href="#">Cookie Policy</a>
    <a href="#">Terms & Conditions</a>
    <a href="#">Privacy Policy</a>
    <a href="#">FAQs</a>
  </div>
</footer>

</body>
</html>
